<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    tools:context=".user_page.UserPageActivity">

    <include layout="@layout/activity_user_page_toolbar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingHorizontal="24dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/account"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя"
            android:layout_marginBottom="6dp"
            />
        <EditText
            android:id="@+id/activity_user_page_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TestName"
            android:background="@null"
            android:textColor="@color/color_black"
            android:textSize="16sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_background_gray"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Фамилия"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="24dp"
            />
        <EditText
            android:id="@+id/activity_user_page_surname_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TestName"
            android:background="@null"
            android:textColor="@color/color_black"
            android:textSize="16sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_background_gray"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Электронная почта"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="6dp"
            />
        <EditText
            android:id="@+id/activity_user_page_email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TestName@gmail.com"
            android:background="@null"
            android:textColor="@color/color_black"
            android:textSize="16sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_background_gray"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Номер телефона"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="6dp"
            />
        <br.com.sapereaude.maskedEditText.MaskedEditText
            android:id="@+id/activity_user_page_telephone_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:typeface="normal"
            android:maxLines="1"
            android:background="@null"
            mask:allowed_chars="1234567890"
            mask:mask="+7(###)###-##-##"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_background_gray"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Адрес проживания"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="6dp"
            />
        <EditText
            android:id="@+id/activity_user_page_address_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Алматы"
            android:background="@null"
            android:textColor="@color/color_black"
            android:textSize="16sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_background_gray"
            />

    </LinearLayout>

    <Button
        android:id="@+id/activity_registration_sign_up_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_login_button"
        android:text="Сохранить изменения"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginHorizontal="24dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        />

</FrameLayout>